package  {		public class Bleep {	import flash.media.Sound;	import flash.events.SampleDataEvent;	import flash.utils.*		private var sg:Sound;		static var last:Number = 0;				public function Bleep() { 			if(getTimer()-last > 10){				sg = new Sound();				sg.addEventListener(SampleDataEvent.SAMPLE_DATA, this.sfx);				if(Globals.sound) sg.play();				last = getTimer();			}		}			private function sfx(e:SampleDataEvent):void {			var pitch:Number = Math.random()*30+5;			var t:Number = 0;			var val:Number;			for (var c:int=0; c<1024; c++) {				val = Math.round(Math.sin(t)) * (1024.0-c)/1024.0;				t += pitch*.01 * (Math.random()*.5+.5);				pitch += .01;				e.data.writeFloat(val*.2);				e.data.writeFloat(val*.2);			}		}	}	}