package {	import flash.events.Event;	import flash.display.MovieClip;	public class ERadiater extends Enemy{		public var timer:Number;		public var o:Vec2D;		public function ERadiater (a:Attractable, b:Attractable){			super(a, b);			timer = 0;			o = new Vec2D(handle.x, handle.y);		}		public override function update(){			var dist2:Vec2D = new Vec2D(base.y-o.y, -(base.x - o.x));			var dist:Vec2D = new Vec2D(base.x-handle.x, base.y - handle.y);			dist.length = 3;			dist2.length = Math.sin(timer)*20;			timer += .1;						var dir:Vec2D = new Vec2D(dist.x + dist2.x, dist.y + dist2.y);						handle.momentum.x += dir.x;			handle.momentum.y += dir.y;						handle.clip.rotation = Vec2D.angle2(new Vec2D(0, -1), handle.momentum);		}	}}