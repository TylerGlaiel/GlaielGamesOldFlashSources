package  {		public class EPhaser extends Enemy{		public var timer:int;		private var dir:Vec2D;		public function EPhaser(a:Attractable, b:Attractable) {			super(a, b);			timer = 0;			dir = new Vec2D(10, 0);			handle.rumble = 10;		}		public override function update(){			var dist:Vec2D = new Vec2D(base.x - handle.x, base.y-handle.y);						timer = (timer+2)%90;			if(timer == 0){				dir.rotate(Math.random()*180-90);			}			dir.rotate(Vec2D.angle2(dir, dist)*.01);			var speed:Number = (60-timer)/18;			if(speed<0) speed = 0;						handle.clip.alpha = -((timer-40)/40);						handle.momentum.x += dir.x*speed;			handle.momentum.y += dir.y*speed;			handle.clip.rotation = Vec2D.angle2(new Vec2D(0, -1), handle.momentum);		}	}	}