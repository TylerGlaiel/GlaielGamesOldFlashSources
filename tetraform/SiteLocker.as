package{	import flash.display.*;		/**	 * ...	 * @author Joey Betz	 */	public class SiteLocker	{				public function SiteLocker() 		{					}						public static function isPlayingFromSites( stage:Stage, ... args ):Boolean		{			var domain:String = getDomain( stage );						trace(domain);						var isOn:Boolean = false;			for (var i:int = 0; i < args.length; i++) 			{				if ( domain == args[i] )					isOn = true;			}			return Boolean( isOn || domain == "" );		}				public static function getDomain( stage:Stage ):String		{			var url:String = stage.loaderInfo.url;			var urlStart:Number = url.indexOf(":/")+3;			var urlEnd:Number = url.indexOf("/", urlStart);			var domain:String = url.substring(urlStart, urlEnd);			var LastDot:Number = domain.lastIndexOf( "." )-1;			var domEnd:Number = domain.lastIndexOf(".", LastDot)+1;			domain = domain.substring(domEnd, domain.length);			return domain;		}			}	}