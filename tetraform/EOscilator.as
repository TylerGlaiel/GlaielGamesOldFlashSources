package {	import flash.events.Event;	import flash.display.MovieClip;	public class EOscilator extends Enemy{		public var timer:Number;		private var btimer:int = 0;		private var sign:int;		public function EOscilator (a:Attractable, b:Attractable){			super(a, b);			timer = -10;			btimer = Math.random()*700;			sign = Math.random()<.5?1:-1;		}		public override function update(){			var dist:Vec2D = new Vec2D(base.y-handle.y, -(base.x - handle.x));			var dl:Number = dist.length;			dist.length = 3;			timer += .01;						var dir:Vec2D = new Vec2D(sign*dist.x / (timer>=1?timer*3:1) - dist.y * (timer>=1?timer*3:.4),									  sign*dist.y / (timer>=1?timer*3:1) + dist.x * (timer>=1?timer*3:.4))			dir.norm();						handle.momentum.x += dir.x * 10 - dist.y*Math.sin(timer*20)*10;			handle.momentum.y += dir.y * 10 + dist.x*Math.sin(timer*20)*10;						if(dl < 700 && timer < 1){				btimer = (btimer+1)%700;				if(btimer==0){					ROOT.launchTinyBomb(new Vec2D(handle.x, handle.y), new Vec2D(0, 0));				}			}						handle.clip.rotation = Vec2D.angle2(new Vec2D(0, -1), handle.momentum);		}	}}