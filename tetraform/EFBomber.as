package {	import flash.events.Event;	import flash.display.MovieClip;	public class EFBomber extends Enemy{		public var timer:Number;		private var btimer:int = 0;		public function EFBomber (a:Attractable, b:Attractable){			super(a, b);			timer = -10;			btimer = Math.random()*500;		}		public override function update(){			var dist:Vec2D = new Vec2D(base.y-handle.y, -(base.x - handle.x));			var dl:Number = dist.length;			dist.length = 3;			timer += .01;						var dir:Vec2D = new Vec2D(-dist.x / (timer>=1?timer*3:1) - dist.y * (timer>=1?timer*3:.4),									  -dist.y / (timer>=1?timer*3:1) + dist.x * (timer>=1?timer*3:.4))			dir.norm();						handle.momentum.x += dir.x * 13;			handle.momentum.y += dir.y * 13;						if(dl < 700 && timer < 1){				btimer = (btimer+1)%500;				var speed:Vec2D = new Vec2D(0, -1).rotated(handle.clip.rotation);				speed.length = 3;				if(btimer==0){					SoundEffect.play(SoundEffect.FIRE);					ROOT.launchMissile(new Vec2D(handle.x+speed.x*20, handle.y+speed.y*20), speed);					MovieClip(handle.clip).play();				}			}						handle.clip.rotation = Vec2D.angle2(new Vec2D(0, -1), handle.momentum);		}	}}