package  {		import flash.media.Sound;	import flash.media.SoundChannel;	import flash.media.SoundTransform;	import flash.events.*;		public class SoundEffect {				public static const BOOM:int = 0;		public static const SELECT:int = 1;		public static const FIRE:int = 2;		public static const NUKE:int = 3;				private static var sounds:Vector.<Sound>;		private static var channel:SoundChannel;		private static var PlaySound:Boolean = true;				private static var playingcount = 0;		private static var initiated:Boolean = false;				public function SoundEffect() { }						public static function init(){			if(!initiated){				initiated = true;				channel = new SoundChannel();				sounds = new Vector.<Sound>();								sounds.push(new ExplSFX());				sounds.push(new SelectSFX());				sounds.push(new FireSFX());				sounds.push(new NukeSFX());			}		}				public static function play(id:int, vol:Number = 1){			if(Globals.sound && playingcount < 20){				var tform = new SoundTransform();				tform.volume = vol;				channel = sounds[id].play(0, 1, tform);				playingcount++;				channel.addEventListener(Event.SOUND_COMPLETE, completeSound);			}		}		private static function completeSound(e:Event){			playingcount--;		}	}}