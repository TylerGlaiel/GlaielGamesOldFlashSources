package {	import flash.display.MovieClip	public class Cam {		public var x:Number;		public var y:Number;		public var w:Number;		public var h:Number;		public var r:Number;		private var sW:Number;		private var sH:Number;		private var container:MovieClip;		public function Cam(screenWidth:Number, screenHeight:Number, tgt:MovieClip):void {			sW = screenWidth;			sH = screenHeight;			container = tgt;			x = sW/2;			y = sH/2;			w = sW;			h = sH;			r = 0;		}		public function update():void {			if(isNaN(r)){				r = 0			}			if(isNaN(x)){				x = 0			}			if(isNaN(y)){				y = 0			}			if(isNaN(w)){				w = 0			}			if(isNaN(h)){				h = 0			}			while(r>360){				r -= 360			}			while(r<-360){				r += 360			}			container.parent.rotation = -r;			container.parent.parent.scaleX = sW/w;			container.parent.parent.scaleY = sH/h;			//var v:Vector2D = new Vector2D(sW/2, sH/2);			//v.rotate(-r);			container.parent.parent.x = sW/2			container.parent.parent.y = sH/2			container.x = -x;			container.y = -y;		}		public function get sx(){			return(w/sW)		}		public function get sy(){			return(h/sH)		}	}}